{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "title": "detect_signal",
  "type": "object",
  "properties": {
    "tool": { "const": "detect_signal" },

    "input": {
      "type": "object",
      "properties": {
        "symbol": { "type": "string", "minLength": 1 },
        "timeframe": {
          "type": "string",
          "enum": ["5m", "15m", "1h", "4h", "1D", "1W"]
        },
        "ohlcv": {
          "type": "array",
          "minItems": 1
        }
      },
      "required": ["symbol", "timeframe", "ohlcv"],
      "additionalProperties": false
    },

    "output": {
      "type": "object",
      "properties": {
        "status": {
          "type": "string",
          "enum": ["success", "no_signal", "data_error", "invalid_input"]
        },

        "signal_type": {
          "type": "string",
          "enum": ["breakout", "pullback", "support_bounce", "none"]
        },

        "key_levels": { "type": ["object", "null"] },

        "volume_confirmation": { "type": ["boolean", "null"] },

        "confidence": {
          "type": "number",
          "minimum": 0,
          "maximum": 1
        },

        "error": {
          "type": ["object", "null"],
          "properties": {
            "code": { "type": "string" },
            "message": { "type": "string" },
            "recoverable": { "type": "boolean" }
          },
          "required": ["code", "message"]
        }
      },
      "required": ["status", "confidence"],
      "additionalProperties": false
    }
  },
  "required": ["tool", "input", "output"]
}
