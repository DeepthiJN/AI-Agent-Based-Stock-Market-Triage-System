{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "title": "simulate_trade",
  "type": "object",
  "properties": {
    "tool": { "const": "simulate_trade" },

    "input": {
      "type": "object",
      "properties": {
        "entry": { "type": "number" },
        "exit_price": { "type": "number" },
        "position_size": { "type": "number", "exclusiveMinimum": 0 }
      },
      "required": ["entry", "exit_price", "position_size"],
      "additionalProperties": false
    },

    "output": {
      "type": "object",
      "properties": {
        "status": {
          "type": "string",
          "enum": ["success", "simulation_error", "invalid_input"]
        },

        "pnl": { "type": ["number", "null"] },
        "return_percent": { "type": ["number", "null"] },

        "confidence": {
          "type": "number",
          "minimum": 0,
          "maximum": 1
        },

        "error": {
          "type": ["object", "null"],
          "properties": {
            "code": { "type": "string" },
            "message": { "type": "string" }
          },
          "required": ["code", "message"]
        }
      },
      "required": ["status", "confidence"],
      "additionalProperties": false
    }
  },
  "required": ["tool", "input", "output"]
}
