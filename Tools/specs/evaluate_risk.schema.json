{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "title": "evaluate_risk",
  "type": "object",
  "properties": {
    "tool": { "const": "evaluate_risk" },

    "input": {
      "type": "object",
      "properties": {
        "capital": { "type": "number", "exclusiveMinimum": 0 },
        "risk_percent": { "type": "number", "minimum": 0.1, "maximum": 10 },
        "entry": { "type": "number" },
        "stop_loss": { "type": "number" }
      },
      "required": ["capital", "risk_percent", "entry", "stop_loss"],
      "additionalProperties": false
    },

    "output": {
      "type": "object",
      "properties": {
        "status": {
          "type": "string",
          "enum": ["success", "risk_violation", "invalid_input"]
        },

        "position_size": { "type": ["number", "null"] },
        "max_risk_amount": { "type": ["number", "null"] },
        "risk_reward_ratio": { "type": ["number", "null"] },

        "confidence": {
          "type": "number",
          "minimum": 0,
          "maximum": 1
        },

        "policy_flags": {
          "type": "array",
          "items": { "type": "string" }
        },

        "error": {
          "type": ["object", "null"],
          "properties": {
            "code": { "type": "string" },
            "message": { "type": "string" }
          },
          "required": ["code", "message"]
        }
      },
      "required": ["status", "confidence"],
      "additionalProperties": false
    }
  },
  "required": ["tool", "input", "output"]
}
